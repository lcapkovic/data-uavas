{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/organizations#",

	"blocks":{
		"baseData": {
			"title": "Základné údaje",
			"transCode": "schema.org.baseData",
			"type": "object",
			"properties": {
				"name": {
					"title": "Obchodný názov spoločnosti",
					"transCode": "schema.org.name",
					"type": "string",
					"required": true
				},
				"startDate": {
					"extends":"uri://registries/commontypes#blocks/date",
					"title": "Dátum založenia",
					"transCode":"schema.org.club.startDate"
				},
				"dateOfRegistration": {
					"extends":"uri://registries/commontypes#blocks/date",
					"title": "Dátum registrácie",
					"transCode":"schema.org.assoc.dateOfRegistration"
				},
				"stateOfOrganization": {
					"extends":"uri://registries/commonenums#blocks/active",
					"title": "Stav klubu",
					"transCode":"schema.org.club.stateOfClub",
					"type": "string"
				},
				"hasLicense": {
					"extends": "uri://registries/commonenums#blocks/boolean",
					"title": "Povolenie pre letecké práce",
					"xxtransCode": "schema.people.isReferee"
				},
				"licenseStartDate": {
					"extends": "uri://registries/commontypes#blocks/date",
					"title": "Platnosť od",
					"xxtransCode": "schema.people.birthDate"
				},
				"licenseEndDate": {
					"extends": "uri://registries/commontypes#blocks/date",
					"title": "Platnosť do",
					"xxtransCode": "schema.people.birthDate"
				}
			}
		},
		"logoInfo": {
			"title": "Logo",
			"transCode": "schema.org.logoInfo",
			"type": "object",
			"properties": {
				"photo": {
					"title": "Logo",
					"transCode": "schema.org.logo",
					"type": "string",
					"render": {
						"component": "psui-uploadable-image",
						"height": 230,
						"width": 230
					}
				}
			}
		},
		"contactInfo": {
			"title": "Kontaktné údaje",
			"transCode": "schema.org.contactInfo",
			"type": "object",
			"properties": {
				"street": {
					"title": "Ulica",
					"transCode": "schema.org.street",
					"type": "string"
				},
				"houseNumber": {
					"title": "Číslo domu",
					"transCode": "schema.org.houseNumber",
					"type": "string"
				},
				"city": {
					"$ref": "uri://registries/towns#town"
				},
				"zipCode": {
					"title": "PSČ",
					"transCode": "schema.org.zipCode",
					"type": "string"
				},
				"country": {
					"$ref": "uri://registries/countries#country"
				},
				"phoneNumber": {
					"title": "Telefón",
					"transCode": "schema.org.phoneNumber",
					"type": "string"
				},
				"mobileNumber": {
					"title": "Mobil",
					"transCode": "schema.org.mobileNumber",
					"type": "string"
				},
				"email": {
					"title": "E-mail",
					"transCode": "schema.org.email",
					"type": "string"
				},
				"fax": {
					"title": "FAX",
					"transCode": "schema.org.fax",
					"type": "string"
				},
				"webPage": {
					"title": "Webová stránka",
					"transCode": "schema.org.webPage",
					"type": "string"
				}
			}
		},
		"bankInfo": {
			"title": "Fakturačné údaje",
			"transCode": "schema.org.bankInfo",
			"type": "object",
			"properties": {
				"statutarOrgan": {
					"title": "Štatutárny orgán",
					"transCode": "schema.org.statutarOrgan",
					"type": "string"
				},
				"ico": {
					"title": "IČO",
					"transCode": "schema.org.ico",
					"type": "string",
					"required": true
				},
				"dic": {
					"title": "DIČ",
					"transCode": "schema.org.dic",
					"type": "string"
				},
				"countryIcDPH": {
					"title": "krajina IČ DPH",
					"transCode": "schema.org.country.icDPH",
					"type": "string"
				},
				"icDPH": {
					"title": "IČ DPH",
					"transCode": "schema.org.icDPH",
					"type": "string"
				},
				"bankAccount": {
					"title": "Číslo účtu",
					"transCode": "schema.org.bankAccount",
					"type": "string"
				},
				"bankCode": {
					"title": "Kód banky",
					"transCode": "schema.org.bankCode",
					"type": "string"
				},
				"bank": {
					"title": "Názov banky",
					"transCode": "schema.org.bank",
					"type": "string"
				},
				"iban": {
					"title": "IBAN",
					"transCode": "schema.org.iban",
					"type": "string"
				},
				"swift": {
					"title": "SWIFT",
					"transCode": "schema.org.swift",
					"type": "string"
				},
				"street": {
					"title": "Ulica",
					"transCode": "schema.org.street",
					"type": "string",
					"required": true
				},
				"houseNumber": {
					"title": "Číslo domu",
					"transCode": "schema.org.houseNumber",
					"type": "string",
					"required": true
				},
				"city": {
					"$ref": "uri://registries/towns#town"
				},
				"zipCode": {
					"title": "PSČ",
					"transCode": "schema.org.zipCode",
					"type": "string",
					"required": true
				},
				"country": {
					"$ref": "uri://registries/countries#country"
				}
			}
		}
	},

	"models":{
		"company":{
			"table": "organizations",
			"title": "Organizácia",
			"xxtransCode": "schema.org.title",
			"security": {
				"create": {
					"static": [
						"Registry - write"
					]
				},
				"read": {
					"static": [
						"Registry - read"
					]
				},
				"modify": {
					"static": [
						"Registry - write"
					]
				}
			},
			"properties":{
				"baseData":{
					"$ref":"uri://registries/organizations#blocks/baseData"
				},
				"logoInfo":{
					"$ref":"uri://registries/organizations#blocks/logoInfo"
				},
				"contactInfo": {
					"$ref":"uri://registries/organizations#blocks/contactInfo"
				},
				"bankInfo": {
					"$ref":"uri://registries/organizations#blocks/bankInfo"
				}
			}
		}
	},

	"views":{
		"company":{
			"new":{
				"$ref":"uri://registries/organizations#models/company"
			},
			"view":{
				"$ref":"uri://registries/organizations#models/company"
			},
			"search":{
				"extends":"uri://registries/organizations#models/company",
				"clientActions": [
					{
						"__DIRECTIVE__": "schema-redirect-link",
						"title": "Zobraziť",
						"params": {
							"path": "/registry/view/uri~3A~2F~2Fregistries~2Forganizations~23views~2Fcompany/{{model.id}}"
						}
					}
				],
				"listFields": [
					{
						"field": "baseData.name",
						"title": "Názov organizácie",
						"transCode":"schema.org.name"
					},
					{
						"field": "baseData.dateOfRegistration",
						"title": "Dátum registrácie",
						"transCode":"schema.org.assoc.dateOfRegistration"
					}
				]
			}
		}
	}
}